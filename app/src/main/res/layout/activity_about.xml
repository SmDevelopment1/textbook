<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:text="This (class 9-10 ssc all books ৯ম-১০ম শ্রেণীর সকল বই) is an Bangla education apps for students where textbook of class 9 10 book free from education board Bangladesh."
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:text="This app made by "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:src="@drawable/mrsoftit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/con"
            android:visibility="visible"
            android:textSize="20dp"
            android:text="Contact Me "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/gmail"
            android:text="mijantck3@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>